<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>Xiggit</title>

    <% if RAILS_ENV == 'production' %>
      <%= google_prototype :version => '1.6.0.3' %>
      <%= google_scriptaculous :version => '1.8.2' %>
      <%= javascript_include_tag 'application' %>
    <% else %>
    <%= javascript_include_tag :defaults %>
    <% end %>

    <%= stylesheet_link_tag 'application' %>
  </head>
  <body>
    <script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-11557446-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>

    <%= fb_connect_javascript_tag %>
    <% init_fb_connect("XFBML","Api", :app_settings => @app_settings) do %>
      <%= yield :fb_connect %>
      <%= fb_user_action(@user_action_to_publish) if @user_action_to_publish %>
    <% end %>

     <div id="page">
       
     <% if current_user %>
       <div id="sidebar">
        <%= render :partial => 'shared/sidebar' %>
      </div>
       <% else %>
      <% end %>

      <div id="main-wrapper">
        <div id="header">
          <%= yield :header %>
        </div>
        <div id='content'>

         <% if current_user %>    
  
        <% unless request.url == root_url %>

          <% if current_user.email == nil || current_user.email.blank? %>
          <div id="warning">IMPORTANT: <div style="font-family:'Delicious Bold';display:inline;font-size:18px;color:black;">You won't be able to contact sellers or post books<br />until you enter an email address!<br />
            </div>

            <% form_remote_tag(:url => {:controller => 'user', :action => 'save_email'},
    :html => {:id => 'email_form'}) do %>
<%= label('email', 'email', 'Enter your email here:') %><%= text_field 'email', 'to_s'  %>
<%= submit_tag 'Confirm' %>
<% end %>


          </div>
          <% end %>
          
         <% end %>
          <%end%>

     
    <% flash.each do |key, msg| %>
     <%= content_tag :div, msg, :class => key, :id => key %>
          <% end %>

          <%= yield %>
        </div>


      </div>
         <div id="footer">
           <ul>
             <li>&copy; <%= Time.new.year %>  Xiggit.</li>
             <li><%= link_to 'About', home_method_path('about') %></li>
             <li><%= link_to 'Privacy', home_method_path('privacy') %></li>
             <li><%= link_to 'Terms of Use', home_method_path('terms') %></li>
             <li><%= link_to 'Help', home_method_path('help') %></li>
           </ul>
      </div>
    </div>

    <script type="text/javascript">
var uservoiceOptions = {
  /* required */
  key: 'xiggit',
  host: 'xiggit.uservoice.com',
  forum: '57352',
  showTab: true,
  /* optional */
  alignment: 'left',
  background_color:'#06C',
  text_color: 'white',
  hover_color: '#ff8400',
  lang: 'en'
};

function _loadUserVoice() {
  var s = document.createElement('script');
  s.setAttribute('type', 'text/javascript');
  s.setAttribute('src', ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js");
  document.getElementsByTagName('head')[0].appendChild(s);
}
_loadSuper = window.onload;
window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
</script>

  </body>
</html>
