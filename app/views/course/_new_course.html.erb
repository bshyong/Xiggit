<li id="new_course">
 <%= check_box(@course, Course.find_by_name_and_uid(@course.name, @current_user.facebook_id).checked) %>
 <%= @course.name %>
   <div id="delete_course" style="font-size:12px; font-family:'Delicious Roman'; padding-top:5px; margin-right:2px;float:right; display:inline;">
    <%= link_to_remote "Delete", {:update => 'new_course', :confirm => 'Are you sure you want to delete ' + @course.name + '?', :url => { :controller => 'course', :action => 'delete', :course_name => @course.name }} %>
      </div>
  </li>