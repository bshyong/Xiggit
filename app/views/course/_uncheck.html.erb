 <li id="<%= @course.name %>"> 
<%= check_box_tag(@course.name, 1, checked(Course.find_by_name_and_uid(@course.name, current_user.id)),
    {:onclick => remote_function(
    :update => @course.name,
    :url => { :controller => 'course', :action => 'check', :course_name => @course.name },
    :update => @course.name,
    :complete => visual_effect(:highlight, @course.name, :duration => 1.3))} ) %>
    <%=h @course.name %>
        <div id="delete_course" style="font-size:12px; font-family:'Delicious Roman'; padding-top:5px; margin-right:2px;float:right; display:inline;">
    <%= link_to_remote "Delete", {:update => @course.name, :confirm => 'Are you sure you want to delete ' + @course.name + '?', :url => { :controller => 'course', :action => 'delete', :course_name => @course.name }} %>
      </div>
      </li>
