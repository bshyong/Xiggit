<h1 style="text-align:center;">New user registration</h1>

<table align="center" style="text-align:left;">
<tr><td>
<% form_for @user do |form| %> 
<%= form.error_messages %>  
</td></tr>
</table>

<table align="center">
<tr><td>
  <p>  
    <%= form.label :first_name, "First name" %>  (or nickname)<br />
    <%= form.text_field :first_name %>  
  </p>  
  <p>  
    <%= form.label :email, "Email" %>  (no spam, ever. promise.)  <br />
    <%= form.text_field :email %>  
  </p>  
  </td>
  <td>
  <p>  
    <%= form.label :password, "Password" %>  <br />
    <%= form.password_field :password %>  
  </p>  
  <p>  
    <%= form.label :password_confirmation, "Password confirmation" %>  <br />
    <%= form.password_field :password_confirmation %>  
  </p>  
  </td>
  </table>
 <table align="center">
  <tr><td>
  <p style="text-align:center;">  
    <%= form.submit "Submit" %>  
  </p>  
  </td></tr>
  </table>

<% end %>  

