class BookBag
    attr_reader :items

    def initialize
        @items = []
    end

    def add_book(book)

        if @items.include?(book)
            # right now, if book is already in bag
            # the old book item will flash yellow
            # and nothing new will be added
        else

        @items << book

            # note we are storing the ID of the book_post in the array
        end
    end

     def remove_book(book)
         @items.delete(book)
     end

end